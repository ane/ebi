digraph {
    node[shape=record];
    
    subgraph cluster_User {
        label="World"
        A[label="HTTP Request"];
        E[label="HTTP Response"]
    }

    subgraph cluster_Host {
        label="Host"
        B[label="Web Server"];
    }

    subgraph cluster_API {
        label="API"
        C[label="Web API"];
        
